/*
En un curso de 4 alumnos se registraron las notas de sus exámenes y 
se deben procesar de acuerdo a lo siguiente:
a) Ingresar Nombre y Nota de cada alumno (almacenar los datos en dos vectores paralelos)
b) Realizar un listado que muestre los nombres, notas y condición del alumno.
En la condición, colocar "Muy Bueno" si la nota es mayor o igual a 8, "Bueno"
si la nota está entre 4 y 7, y colocar "Insuficiente" si la nota es inferior a 4.
c) Imprimir cuantos alumnos tienen la leyenda “Muy Bueno”.
*/
#include "iostream"
#include <stdio.h>
using namespace std;
class Ejercicio{
    private:
        float notas[4];
        char nombres[4][40];
    public:
        int muyb=0;
        void cargar();
        void imprimir();
        void imprimirmuybueno();
};

    void Ejercicio::cargar()
    {
        for(int i=0; i<4; i++)
        {
            cout << "Ingresar el nombre del alumno: " << i + 1<< endl;
            cin.getline(nombres[i],40);
            cout << "Ingresar la nota del alumno " << nombres[i][40] << endl;
            cin >> notas[i];
            cin.ignore(); // PARA DESPEJAR
        }
    }
    
    void Ejercicio:: imprimir()
    {
        for(int i=0; i<4; i++)
        {
            cout << "El alumno " << nombres[i] << " tiene una nota de " << notas[i] << " y su condicion es de "  << endl; 
            if(notas[i]>=8)
            {
                cout << "Muy Bueno" << endl;
                muyb=muyb + 1;
            } else if(notas[i]>=4 and notas[i]<=7)
                   {
                       cout << "Bueno" << endl;
                    } else
                        {
                            cout << "Insuficiente" << endl;
                        }
               
        }
    }
    
    void Ejercicio:: imprimirmuybueno()
    {
        cout << "/////////////////////////////////////////////////////////////" << endl;
        cout << "La cantidad de alumnos que tienen la leyenda “Muy Bueno” son: " << muyb << endl;
        cout << "/////////////////////////////////////////////////////////////" << endl;
    }

int main()
{
    
  Ejercicio ejerc;
  ejerc.cargar();
  ejerc.imprimir();
  ejerc.imprimirmuybueno();
  return 0;
}
